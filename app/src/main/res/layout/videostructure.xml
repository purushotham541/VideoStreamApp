<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/iv_playVideo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/v_title"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:layout_toRightOf="@id/iv_playVideo"
        android:text="xxxxxxxxxxxxxx"
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/v_decription"
        android:textColor="#000"
        android:layout_alignParentRight="true"
        android:textSize="12sp"

        android:layout_toRightOf="@id/iv_playVideo"
        android:layout_below="@id/v_title"
        android:text="xxxxxxxxxxxxxx"
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textColor="#000"
        android:background="#ebeef2"
        android:layout_below="@id/iv_playVideo"
        android:layout_marginTop="10dp"/>

</RelativeLayout>